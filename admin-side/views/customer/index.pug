extends ../layouts/layout 
block contents 
    .row
      .col-lg-12.grid-margin.stretch-card
        .card
          .card-body
            h4.card-title Khách hàng                        
            .table-responsive
                table.table.table-striped
                    thead
                        tr
                            th Username
                            th Tên khách hàng      
                            th Email      
                            th Ngày sinh
                            th Số điện thoại
                            th Giới tính
                            th 
                            th 
                    tbody
                        each customer in customers
                            tr
                                td= customer.username        
                                td= customer.name        
                                td= customer.email        
                                td= customer.date        
                                td= customer.phone        
                                td= customer.gender        
                                td
                                    a(href=`/customers/edit/${customer._id}`)
                                        button.btn.btn-inverse-primary.btn-icon(type='button')
                                            i.mdi.mdi-pencil 
                                td               
                                    a(href=`/customers/delete/${customer._id}`)
                                        button.btn.btn-inverse-danger.btn-icon(type='button')
                                            i.mdi.mdi-delete