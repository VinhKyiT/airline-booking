extends ../layouts/layout
block contents 
    .col-12.grid-margin.stretch-card
      .card
        .card-body
          h4.card-title= `Edit ${role.name}`
          form.forms-sample(method="POST", action=`/roles/edit/${role._id}`)
            .form-group
              label(for='exampleInputName1') Tên sân bay
              input#exampleInputName1.form-control(type='text', placeholder='Tên sân bay' name="name" value=role.name)
            
            button(type="submit" class="btn btn-primary mr-2") Submit
            button(class="btn btn-light") Cancel          